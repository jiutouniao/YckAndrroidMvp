<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="259dp"
            android:layout_height="258dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/ebook_shape_wihte_bg"
            >
            <TextView
                style="@style/text_single_left"
                android:id="@+id/tv_title"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:text="两会精神的要点总结"
                android:textSize="16sp"
                android:textColor="#4a4a4a"/>
            <TextView
                style="@style/text_single_left"
                android:id="@+id/tv_chapter_price"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv_title"
                android:text="本章节需收费："
                android:textSize="14sp"
                android:textColor="#4a4a4a"/>

            <TextView
                style="@style/text_single_left"
                android:id="@+id/tv_chapter_number"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_chapter_price"
                android:text="0.8 RMB"
                android:textSize="14sp"
                android:textColor="#ff7800"/>

            <TextView
                style="@style/text_single_left"
                android:id="@+id/tv_all_price"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/tv_chapter_price"
                android:text="购买全本："
                android:textSize="14sp"
                android:textColor="#4a4a4a"/>


            <TextView
                style="@style/text_single_left"
                android:id="@+id/tv_all_number"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_all_price"
                android:text="10 RMB"
                android:textSize="14sp"
                android:textColor="#ff7800"/>

            <TextView
                style="@style/text_more_default"
                android:id="@+id/tv_buy"
                android:layout_alignParentBottom="true"
                android:layout_height="53dp"
                android:layout_width="match_parent"
                android:text="购买"
                android:textSize="16sp"
                android:background="@drawable/ebook_shape_blue_bg"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <ImageView
            style="@style/text_more_default"
            android:id="@+id/iv_exit"
            android:layout_alignParentBottom="true"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/ebook_bg_exit"
            android:src="@drawable/ebook_bt_exit"
            android:textColor="#ffffff"/>
    </LinearLayout>
</layout>
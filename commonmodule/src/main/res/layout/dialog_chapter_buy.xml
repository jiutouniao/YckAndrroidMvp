<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/llyt_main"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            style="@style/text_single_default"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:textSize="16dp"
            android:textColor="@color/read_common_text_color"
            android:text="两会精神的要点总" />


        <TextView
            style="@style/text_single_default"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_title"
            android:id="@+id/tv_chapter_price"
            android:textSize="16dp"
            android:textColor="@color/read_common_text_color"
            android:text="本章节需收费： 0.8元" />

        <TextView
            android:background="@color/text_color_gray3"
            android:layout_height="10dp"
            android:id="@+id/tv_line1"
            android:layout_below="@+id/tv_chapter_price"
            android:layout_width="match_parent" />

        <TextView
            style="@style/text_single_default"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_line1"
            android:id="@+id/tv_all_price"
            android:textSize="16dp"
            android:textColor="@color/read_common_text_color"
            android:text="购买全本：10元" />
        <TextView
            android:background="@color/text_color_gray3"
            android:layout_height="10dp"
            android:id="@+id/tv_line2"
            android:layout_below="@+id/tv_all_price"
            android:layout_width="match_parent" />
        <TextView
            style="@style/text_single_default"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_line2"
            android:id="@+id/tv_buy"
            android:textSize="16dp"
            android:textColor="@color/read_common_text_color"
            android:text="购买" />


    </RelativeLayout>


</layout>
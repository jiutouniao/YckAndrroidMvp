<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/pay_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="259dp"

        android:layout_height="281dp"
        android:background="@drawable/ebook_theme_white_radius_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:text="充值"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dp_16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@color/line_color_black1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_61"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/ic_zhifubao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"

                    android:text="支付宝"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/dp_14"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/dp_53"
                android:id="@+id/pay_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/ic_weixin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"

                    android:text="微信"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/dp_14"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/pay_close"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/ic_close"/>
</LinearLayout>
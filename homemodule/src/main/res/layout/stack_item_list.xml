<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_13"
        android:paddingTop="@dimen/dp_17"
        android:paddingBottom="@dimen/dp_20"
        >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            app:cardBackgroundColor="#33000000"
            app:cardElevation="5dp"
            android:id="@+id/cv_image"
            >
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dp_109"
                android:layout_height="@dimen/dp_154"
                android:minWidth="@dimen/dp_109"
                android:scaleType="centerCrop"
                android:src="@drawable/book_default"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_title"
            style="@style/text_single_left"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/cv_image"
            android:paddingTop="@dimen/dp_5"
            android:text="爱上生活"
            android:textColor="#384a58"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_more_left"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/cv_image"
            android:layout_below="@+id/tv_title"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="30dp"
            android:paddingTop="@dimen/dp_5"
            android:text="这本书是杨绛对他们一家三口生活的回忆录，作者写这部小说的时候钱钟书先生和他们的女儿钱媛已经逝世，书中回忆的生活情节虽然很平凡，但是真的很感人，非常值得一看！这本书是杨绛对他们一家三口生活的回忆录，作者写这部小说的时候钱钟书先生和他们的女儿钱媛已经逝世，书中回忆的生活情节虽然很平凡，但是真的很感人，非常值得一看！"
            android:textColor="#9098ab"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/tv_name"
            style="@style/text_single_left"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignBottom="@+id/cv_image"
            android:drawableLeft="@drawable/stack_icon_act"
            android:drawablePadding="@dimen/dp_4"
            android:paddingBottom="2dp"
            android:text="昔人"
            android:textColor="#9098ab"
            android:textSize="@dimen/sp_11"
            />

        <TextView
            android:id="@+id/tv_number"
            style="@style/text_single_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/cv_image"
            android:background="@drawable/stack_shape_cicle_blue"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="100人看过"
            android:textColor="#4b91f7"
            android:textSize="@dimen/sp_10"
            />


    </RelativeLayout>
</layout>